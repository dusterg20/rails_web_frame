<% provide(:title, "Access Doors") %>
<div class="row">
  <div class="col-sm-3">
  </div>
  <div class="col-md-6 shadow p-3 mb-5 bg-white rounded">
    <div class="card text-center">
      <div class="card-header text-white bg-primary text-center">
        <h4><%= link_to(add_icon, new_access_control_door_path) %>&nbsp;&nbsp;Access Control Doors</h4>
      </div>
      <div class="card-body text-center">
        <table class="card-table table">
          <tr>
            <th class="text-left">
            </th>
            <th class="text-center">
              Name:
            </th>
            <th class="text-center">
              Location:
            </th>
            <th class="text-center">
              Description:
            </th>
          </tr>
          <% @access_control_doors.order(:name).each  do |door| %>
            <tr>
              <td class="text-left">
              <% if admin_priv? %>
              <%= link_to(delete_icon, access_control_door_path(door.id), method: :delete, data: { confirm: "You sure?" }) %>
              <% end %>
              </td>
              <td class="text-center">
                <%= link_to("#{door.name}", access_control_door_path(door.id)) %>
              </td>
              <td class="text-center">
                <%= door.location %>
              </td>
              <td class="text-center">
                <%= door.description %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="col-sm">
      </div>
    </div>
  </div>
</div>
<div class="row content-justify-center">
  <div class="col-sm">
  <br><br><br><br>
  </div>
</div>

