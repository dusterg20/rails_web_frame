
<h1>Controls</h1>

<div class="container">
  <div class="row align-items-center">
    <div class="col-2">
    </div>
    <div class="col-4">
      <div class="row align-self-end">
        <div class="col align-self-end">
          <table align="right">
            <tr>
              <td>
                <img src="<%= asset_path("thermo.png") %>" height="93px">
              </td>
              <td>
                <h3 align="center">
                  &nbsp;&nbsp;&nbsp;<%= @temp_value %>&deg;
                </h3>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col align-self-end">
          <table align="right">
            <tr>
              <td>
                <h5 align="center">Humidity <%= @humid_value %>&percnt;
                </h5>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <div class="col-4 align-self-start">
      <div class="row">
        <div class="col">
          <table>
            <tr>
              <td>
                &nbsp;
              </td>
            </tr>
            <tr>
              <td>
                <h3 align="left">
                  <%= @time_format %>
                </h3>
              </td>
            </tr>
            <tr>
              <td>
                <h5 align="left">
                  <%= @day %>
                </h5>
              </td>
            </tr>
            <tr>
              <td>
                <h5 align="left">
                  <%= @date_format %>
                </h5>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <div class="row" id="grid">
        <div class="col-md-4"><img src="<%= asset_path(@g_door_1) %>" class="img-thumbnail img-responsive"></div>
        <div class="col-md-4"><img src="<%= asset_path(@g_door_2) %>" class="img-thumbnail img-responsive"></div>
        <div class="col-md-4"><img src="<%= asset_path(@shop_door_1) %>" class="img-thumbnail img-responsive"></div>
        <div class="col-md-4"><img src="<%= asset_path(@g_light_1) %>" class="img-thumbnail img-responsive"></div>
        <div class="col-md-4"><img src="<%= asset_path(@g_light_2) %>" class="img-thumbnail img-responsive"></div>
        <div class="col-md-4"><img src="<%= asset_path(@s_light_1) %>" class="img-thumbnail img-responsive"></div>
        <div class="col-md-4"><img src="<%= asset_path(@kitchen_day_light) %>" class="img-thumbnail img-responsive"></div>
        <div class="col-md-4">
          <%= link_to image_tag(@mbr_led, :class => 'img-thumbnail img-responsive'),
          action_path(action_id: "mbr_led_toggle") %>
        </div>
        <div class="col-md-4"><img src="<%= asset_path(@linley_br_led) %>" class="img-thumbnail img-responsive"></div>
      </div>
    </div>
  </div>
</div>
